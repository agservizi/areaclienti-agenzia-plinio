{
    "name": "agservizi/areaclienti-agenzia-plinio",
    "description": "Portale clienti e admin per Agenzia Plinio in PHP nativo",
    "type": "project",
    "require": {
        "php": "^8.1",
        "ext-json": "*",
        "ext-pdo": "*",
        "phpmailer/phpmailer": "^6.9"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        },
        "files": [
            "src/Helpers/Env.php",
            "src/Helpers/db.php",
            "src/Helpers/auth.php",
            "src/Helpers/csrf.php",
            "src/Helpers/validator.php",
            "src/Helpers/mailer.php",
            "src/Helpers/crypto.php",
            "src/Helpers/logger.php",
            "src/Helpers/view.php"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    }
}
